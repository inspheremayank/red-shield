{% set network = _Network.getNetworkData() %}
{{set(this,'title',(network.title))}}

{% set articlesArr = _Blog.getBlogFeed({'limit': 4, 'offset': 0}) %}
{% set articles = articlesArr.articles %}
<div class="page__content-main">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12 px-0">
                <div class="user__profile">
                    <div class="user__profile-banner user__profile--withoutImage image-covered">
                        <div class="user__profile-details">
                            {#<figure>
                                {% set blogImage = network.templatePath~'/static/images/test-image.jpg' %}
                                <img src="{{blogImage}}" class="rounded-circle img-fluid" alt="Profile image" />
                            </figure>#}
                            <h1>Blog Title here</h1>
                            <p>Blog description here</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="container">
        <div class="row">
            {% for i in 1..3 %}
                {% if articles[i] is defined %}
                    {{this.render('partials/_single-article.twig', {network: network, article: articles[i], 'position': i+1, class: 'col-md-4 card__view-third'}) | raw}} 
                {% endif %}
            {% endfor %}
        </div>
    </div>
</div>