{% set network = _Network.getNetworkData() %}
{{set(this,'title',(network.title))}}

{% set articlesArr = _Blog.getBlogFeed({'limit': 4, 'offset': 0}) %}
{% set articles = articlesArr.articles %}
<div class="page__content-main">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12 px-0">
                <div class="blog__wrapper">
                    <div class="blog__wrapper-banner blog__wrapper-banner--withoutImage image-covered">
                        <div class="container">
                            <div class="row">
                                <div class="col-12">
                                    <div class="blog__wrapper-banner-content">
                                        <h1>Section title</h1>
                                        <p>Section description</p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="container">
        <div class="row">
            {% for i in 1..3 %}
                {% if articles[i] is defined %}
                    {{this.render('partials/_single-article.twig', {network: network, article: articles[i], 'position': i+1, class: 'col-md-4 card__view-third'}) | raw}} 
                {% endif %}
            {% endfor %}
        </div>
    </div>
</div>